#!/bin/bash

groupdel wheel
echo "true" > /etc/firstsetup/misc/setup.lock

clear

echo "$(cat /etc/firstsetup/misc/branding.txt)"
echo 'Welcome to chronOS! You will now have to set up the Administrator user, which you will be relying on for sudo/pkexec commands.'
echo 'Make the password something other than the one for your current account.'

passwd root

echo "Great! Now, just sit back and relax while we do some extra tasks..."

clear

echo "$(cat /etc/firstsetup/misc/branding.txt)"
echo "Step 1: Install system flatpaks"
yes | flatpak install --system --assumeyes io.missioncenter.MissionCenter \
	com.mattjakeman.ExtensionManager
clear
